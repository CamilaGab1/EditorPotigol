<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project PotigolANTLR with libraries in sub-folder">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <target name="create_run_jar">
        <jar destfile="../PotigolANTLR/jar/epotigol.jar" encoding="UTF-8">
            <manifest>
                <attribute name="Main-Class" value="br.edu.ifrn.potigol.editor.Editor"/>
                <attribute name="Class-Path" value=". potigol.jar potigol_lib/antlr-runtime-4.7.2.jar potigol_lib/scala-swing.jar potigol_lib/scala-library.jar potigol_lib/scala-reflect.jar"/>
            </manifest>
            <fileset dir="bin"/>
        </jar>
        <copy file="fonts/DejaVuSansMono.ttf" todir="bin/fonts"/>
    </target>
</project>
